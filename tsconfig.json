{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "esnext"],
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "typings"
    ]
  }
}
